# OpenAI Configuration
# Set your OpenAI API key here (get it from https://platform.openai.com/api-keys)
OPENAI_API_KEY=your_openai_api_key_here

# Optional: Override OpenAI base URL (e.g., for custom endpoints, Azure OpenAI, or local OpenAI-compatible servers)
# Leave unset or empty to use the default OpenAI API endpoint (https://api.openai.com/v1)
# Examples:
# OPENAI_BASE_URL=https://api.openai.com/v1
# OPENAI_BASE_URL=https://your-custom-endpoint.com/v1
# OPENAI_BASE_URL=http://localhost:1234/v1  # For LM Studio or similar local servers
OPENAI_BASE_URL=

# Ollama Configuration (if using Ollama backend)
# Optional: Override Ollama base URL (default: http://127.0.0.1:11434)
# OLLAMA_BASE_URL=http://127.0.0.1:11434
# Optional: Specify default Ollama model
# OLLAMA_MODEL=llama3.2

# LM Studio Configuration (if using LM Studio backend)
# Optional: Override LM Studio base URL (default: http://127.0.0.1:1234/v1)
# LMSTUDIO_BASE_URL=http://127.0.0.1:1234/v1

# Logging Level (optional)
# LOG_LEVEL=INFO

# Audio Processing Configuration
# Maximum size for the incoming audio queue (default: 50)
# MAX_AUDIO_QUEUE_SIZE=50

# =============================================================================
# Database Configuration
# =============================================================================
# SQLite (default, for development)
DATABASE_URL=sqlite+aiosqlite:///./voicechat.db

# PostgreSQL (recommended for production)
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/voicechat

# Database pool settings (for PostgreSQL)
# DATABASE_POOL_SIZE=5
# DATABASE_MAX_OVERFLOW=10
# DATABASE_ECHO=false

# =============================================================================
# Redis Configuration (optional, for caching and pub/sub)
# =============================================================================
# REDIS_URL=redis://localhost:6379/0

# =============================================================================
# JWT Authentication Configuration
# =============================================================================
# IMPORTANT: Change these in production!
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# Session Management Configuration
# =============================================================================
# Maximum concurrent sessions per user
MAX_SESSIONS_PER_USER=10

# Session expiration time in hours
SESSION_EXPIRE_HOURS=24

# Session cleanup interval in minutes
CLEANUP_INTERVAL_MINUTES=15

# =============================================================================
# API Configuration
# =============================================================================
# API version for health checks
API_VERSION=1.0.0
